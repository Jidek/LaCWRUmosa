<!-- The following partial is being organized into a table to allow for CSSing per row. -->
<%=content_tag :table, class: "colored" do%>
  <%@check_ins.each do |check_in|%>
    <%=content_tag :tr do%>
      <%=content_tag :td do%>
        <%=link_to check_in.user.name, user_path(check_in.user)%>
        <%=" checked in to "%>
        <%=link_to check_in.location.description, location_path(check_in.location)%>
        <%=check_in.time.strftime("%l:%M%p on %m/%d/%Y")%>
      <%end%>
    <%end%>
  <%end%>
<%end%>
