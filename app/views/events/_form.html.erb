<%=content_tag :table, class: "key-value" do%>

  <%=content_tag :tr do%>
    <%=content_tag :th do%>
      <%=form.label :time, "Time:"%>
    <%end%>
    <%=content_tag :td do%>
      <%=form.text_field :time, id: "datetimepicker"%>
    <%end%>
  <%end%>

  <%=content_tag :tr do%>
    <%=content_tag :th do%>
      <%=form.label :location_id, "Location ID:"%>
    <%end%>
    <%=content_tag :td do%>
      <%=form.select :location_id, options_for_select(Location.selectable_list, @event.location_id), {include_blank: true}%>
    <%end%>
  <%end%>
<%end%>

<%=javascript_tag do%>

$('#datetimepicker').datetimepicker();

<%end%>
