<%=content_tag :table do%>
  <%@Invites.each do |invite|%>
    <%=content_tag :tr do%>
      <%if (invite.rsvp != "rejected")%>
        <%=content_tag :td, link_to(invite.event.location.description, location_path(invite.event.location))%>
        <%=content_tag :td, link_to(invite.event.time, event_path(invite.event))%>
        <%if (invite.rsvp != "accepted")%>
          <%=content_tag :td, link_to("Accept", accept_invite_path({id:0, user_id: session[:cas_user], event_id: invite.event_id}), {method: :patch})%>
          <%=content_tag :td, link_to("Decline", decline_invite_path({id:0, user_id: session[:cas_user], event_id: invite.event_id}), {method: :patch})%>
        <%else%>
          <%=content_tag :td, "Going"%>
        <%end%>
      <%end%>
    <%end%>
  <%end%>
<%end%>
