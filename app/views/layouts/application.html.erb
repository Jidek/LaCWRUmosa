<!DOCTYPE html>
<html>
  <head>
    <title>LaCWRUmosa</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav>
        <%=content_tag :h1, link_to("LaCWRUmosa", root_path)%>

        <%=content_tag :ul do%>
          <%=content_tag :li, link_to("Friends", friends_users_path)%>
          <%=content_tag :li, link_to(print_with_count("Friend Requests", @pending_friend_request_count), friend_requests_path)%>
          <%=content_tag :li, link_to("Locations", locations_path)%>
          <%=content_tag :li, link_to("Check Ins", check_ins_path)%>
          <%=content_tag :li, link_to("Events", events_path)%>
          <%=content_tag :li, link_to(print_with_count("Invitations", @pending_invitation_count), invites_path)%>
        <%end%>
      </nav>
    </header>
    <article>
      <%= yield %>
    </article>
  </body>
</html>
