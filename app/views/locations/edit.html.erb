<%=content_tag :h1, 'Edit Location'%>
<%=form_for(@location) do |form| %>
  <%=content_tag :table do%>
    <%=content_tag :tr do%>
      <%=content_tag :td do%>
        <%=render partial: 'form', locals:{form:form}%>
      <%end%>
    <%end%>

    <%=content_tag :tr do%>
      <%=content_tag :td do%>
        <%= tag "input", { "type": "button", "value": "Autopopulate my location", "onclick": "populateLocation(event)" } %>
      <%end%>
    <%end%>

    <%=content_tag :tr do%>
      <%=content_tag :td do%>
        <%=submit_tag "Update"%>
      <%end%>
    <%end%>
  <%end%>
<%end%>
