<%=content_tag :h1, "Location"%>

<%=content_tag :table, class: "key-value" do%>
  <%=content_tag :tr do%>
    <%=content_tag :th, "ID"%>
    <%=content_tag :td, @location.id%>
  <%end%>

  <%=content_tag :tr do%>
    <%=content_tag :th, "Description"%>
    <%=content_tag :td, @location.description%>
  <%end%>

  <%=content_tag :tr do%>
    <%=content_tag :th, "Coordinates"%>
    <%=content_tag :td, "#{@location.latitude}, #{@location.longitude}"%>
  <%end%>

  <%if @location.indoor_location.present?%>
    <%=content_tag :tr do%>
      <%=content_tag :th, "Building"%>
      <%=content_tag :td, @location.indoor_location.building%>
    <%end%>

    <%=content_tag :tr do%>
      <%=content_tag :th, "Floor"%>
      <%=content_tag :td, @location.indoor_location.floor%>
    <%end%>

    <%=content_tag :tr do%>
      <%=content_tag :th, "Room"%>
      <%=content_tag :td, @location.indoor_location.room%>
    <%end%>
  <%end%>

  <%=content_tag :tr do%>
    <%=content_tag :th, "Score"%>
    <%=content_tag :td, @location.score%>
  <%end%>

<%end%>


<%=@rating.try(:positive?) ? "Upvoted" : (link_to "Upvote", upvote_rating_path(@location), {method: :patch, class: "button"})%>
<%=@rating.try(:negative?) ? "Downvoted" : (link_to "Downvote", downvote_rating_path(@location), {method: :patch, class: "button"})%>

<%=content_tag(:br)%>
<%=link_to("Check In", check_in_location_path(@location), {method: :patch, class: "button"})%>

<%=content_tag(:br)%>
<%=link_to "Location List", locations_path%>
