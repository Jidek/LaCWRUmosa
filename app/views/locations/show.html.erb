<%=content_tag :dl do%>
  <%=content_tag :dt, "ID"%>
  <%=content_tag :dd, @location.id%>

  <%=content_tag :dt, "Description"%>
  <%=content_tag :dd, @location.description%>

  <%=content_tag :dt, "Coordinates"%>
  <%=content_tag :dd, "#{@location.latitude}, #{@location.longitude}"%>

  <%if @location.indoor_location.present?%>
    <%=content_tag :dt, "Building"%>
    <%=content_tag :dd, @location.indoor_location.building%>
    <%=content_tag :dt, "Floor"%>
    <%=content_tag :dd, @location.indoor_location.floor%>
    <%=content_tag :dt, "Room"%>
    <%=content_tag :dd, @location.indoor_location.room%>
  <%end%>

  <%=content_tag :dt, "Score"%>
  <%=content_tag :dd, @location.score%>

<%end%>


<%=@rating.try(:positive?) ? "Upvote" : (link_to "Upvote", upvote_rating_path(@location), {method: :patch})%>
<%=@rating.try(:negative?) ? "Downvote" : (link_to "Downvote", downvote_rating_path(@location), {method: :patch})%>

<%=content_tag(:br)%>
<%=link_to("Check In", check_in_location_path(@location), {method: :patch})%>

<%=content_tag(:br)%>
<%=link_to "Location List", locations_path%>
