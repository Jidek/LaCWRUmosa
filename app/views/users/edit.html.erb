<%=content_tag :h1, "Edit #{@user.user_id}"%>
<%= form_for(@user) do |form| %>
  <%=content_tag :table, class: "key-value" do%>
    <%=content_tag :tr do%>
      <%=content_tag :th do%>
        <%=form.label :nickname, "Nickname:"%>
      <%end%>
      <%=content_tag :td do%>
        <%=form.text_field :nickname%>
      <%end%>
    <%end%>
    <%=content_tag :tr do%>
      <%=content_tag :th do%>
        <%=form.label :grad_year, "Graduation Year:"%>
      <%end%>
      <%=content_tag :td do%>
        <%=form.text_field :grad_year%>
      <%end%>
    <%end%>
    <%=content_tag :tr do%>
      <%=content_tag :th do%>
        <%=form.label :major, "Major:"%>
      <%end%>
      <%=content_tag :td do%>
        <%=form.text_field :major%>
      <%end%>
    <%end%>
    <%=content_tag :tr do%>
      <%=content_tag :td do%>
        <%= submit_tag "Update"%>
      <%end%>
    <%end%>
  <%end%>
<%end%>
