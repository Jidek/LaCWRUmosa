<%=content_tag :h1, "#{@user.nickname || @user.user_id}'s Profile"%>

<%=content_tag :table, class: "key-value" do%>
  <%=content_tag :tr do%>
    <%=content_tag :th, "Case ID"%>
    <%=content_tag :td, @user.user_id%>
  <%end%>

  <%=content_tag :tr do%>
    <%=content_tag :th, "Nickname"%>
    <%=content_tag :td, @user.nickname%>
  <%end%>

  <%=content_tag :tr do%>
    <%=content_tag :th, "Graduation Year"%>
    <%=content_tag :td, @user.grad_year%>
  <%end%>

  <%=content_tag :tr do%>
    <%=content_tag :th, "Major"%>
    <%=content_tag :td, @user.major%>
  <%end%>

  <%=content_tag :tr do%>
    <%=content_tag :th, "Number of check-ins"%>
    <%=content_tag :td, @check_ins%>
  <%end%>

<%end%>



<% if @request.blank? && session[:cas_user] != @user.id %>
  <%=link_to "Send friend request", send_friend_request_user_url(@user), {method: :patch} %>
<%end%>

<%=link_to "User List", users_path%>
